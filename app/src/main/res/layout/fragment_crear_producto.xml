<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".crear_producto">

    <TextView
        android:id="@+id/categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Categoria:"
        app:layout_constraintEnd_toStartOf="@+id/txtCategoria"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtCategoria"
        android:layout_width="178dp"
        android:layout_height="33dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/txtSubcategoria"
        android:layout_width="178dp"
        android:layout_height="33dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCategoria" />

    <TextView
        android:id="@+id/subcategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Subcategoria:"
        app:layout_constraintEnd_toStartOf="@+id/txtSubcategoria"
        app:layout_constraintTop_toBottomOf="@+id/categoria" />

    <EditText
        android:id="@+id/txtArticulo"
        android:layout_width="178dp"
        android:layout_height="33dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSubcategoria" />

    <TextView
        android:id="@+id/Articulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Articulo:"
        app:layout_constraintEnd_toStartOf="@+id/txtArticulo"
        app:layout_constraintTop_toBottomOf="@+id/subcategoria" />
    <TextView
        android:id="@+id/presentacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="36dp"
        android:text="Presentacion:"
        app:layout_constraintEnd_toStartOf="@+id/txtPresentacion"
        app:layout_constraintTop_toBottomOf="@+id/Articulo" />
    <EditText
        android:id="@+id/txtPresentacion"
        android:layout_width="178dp"
        android:layout_height="33dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtArticulo" />

    <TextView
        android:id="@+id/Medida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Medida:"
        app:layout_constraintEnd_toStartOf="@+id/txtMedida"
        app:layout_constraintTop_toBottomOf="@+id/presentacion" />

    <EditText
        android:id="@+id/txtMedida"
        android:layout_width="178dp"
        android:layout_height="33dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPresentacion" />

    <TextView
        android:id="@+id/Proveedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Proveedor:"
        app:layout_constraintEnd_toStartOf="@+id/txtProveedor"
        app:layout_constraintTop_toBottomOf="@+id/Medida" />

    <EditText
        android:id="@+id/txtProveedor"
        android:layout_width="178dp"
        android:layout_height="33dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMedida" />

    <TextView
        android:id="@+id/cant_empaque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="56dp"
        android:text="Cantidad por empaque:"
        app:layout_constraintEnd_toStartOf="@+id/txt_cant_num_empaque"
        app:layout_constraintTop_toBottomOf="@+id/Proveedor" />

    <EditText
        android:id="@+id/txt_cant_num_empaque"
        android:layout_width="50dp"
        android:layout_height="33dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        app:layout_constraintEnd_toStartOf="@+id/txt_cant_empaque"
        app:layout_constraintTop_toBottomOf="@+id/txtProveedor" />

    <EditText
        android:id="@+id/txt_cant_empaque"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtProveedor" />

    <TextView
        android:id="@+id/unidadxempaque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Unidades por empaque:"
        app:layout_constraintEnd_toStartOf="@+id/txt_num_uni_empaque"
        app:layout_constraintTop_toBottomOf="@+id/cant_empaque" />

    <EditText
        android:id="@+id/txt_num_uni_empaque"
        android:layout_width="50dp"
        android:layout_height="33dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toStartOf="@+id/txt_uni_"
        app:layout_constraintTop_toBottomOf="@+id/txt_cant_empaque" />

    <EditText
        android:id="@+id/txt_uni_"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_cant_empaque" />

</androidx.constraintlayout.widget.ConstraintLayout>